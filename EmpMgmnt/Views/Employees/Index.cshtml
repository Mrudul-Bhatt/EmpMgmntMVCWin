@{
}

@model BigViewModel

<h1>Employees</h1>
<br />
<form method="post" action="Index">
    <div class="mb-3">
        <label for="" class="form-label">Enter Name</label>
        <input type="text" class="form-control" asp-for="searchEmployee.Name" >
    </div>

    <button type="submit" class="btn btn-primary" asp-action="Index" asp-controller="Employees">Search</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Salary</th>
            <th>Date Of Birth</th>
            <th>Department</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model.Employee)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.Salary</td>
                <td>@employee.DateOfBirth.ToString("dd-MM-yyyy")</td>
                <td>@employee.Department</td>
                <td><a href="Employees/View/@employee.Id">View</a></td>
            </tr>
        }
    </tbody>
</table>

